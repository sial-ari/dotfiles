#Platform check
platform='unknown'
unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
   platform='linux'
elif [[ "$unamestr" == 'FreeBSD' ]]; then
   platform='freebsd'
elif [[ "$unamestr" == 'OpenBSD' ]]; then
   platform='openbsd'
elif [[ "$unamestr" == 'Darwin' ]]; then
   platform='macosx'
fi
